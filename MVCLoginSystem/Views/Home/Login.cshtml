@model MVCLoginSystem.Models.Login

@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="container row form-group">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            @*@if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>}*@
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>}
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Sign In</h2>
                </div>
            </div>
            <br />
            <div class="row form-group">
                <div class="col-lg-6">
                    <label>UserName</label>
                </div>
                <div class="col-lg-6">
                    @*<input type="text" name="username" class="form-control" />*@
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-6">
                    <label>Password </label>
                </div>
                <div class="col-lg-6">
                    @*<input type="password" name="password" class="form-control">*@
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-6">
                    @*<a href="">Recover Password</a>*@
                    <a href="@Url.Action("RecoverPassword", "Home")">Recover Password</a>
                </div>
                <div class="col-lg-6">
                    @*<input type="submit" value="login" >*@
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p> New User, Please SignUp <a href="">Here </a> </p>
                </div>
            </div>

        </div>
        <div class="col-lg-4">
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}