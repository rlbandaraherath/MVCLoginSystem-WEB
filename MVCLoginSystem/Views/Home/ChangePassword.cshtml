@model MVCLoginSystem.Models.Login

@{
    ViewBag.Title = "Change Password";
}
@using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="container row form-group">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            @*@if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>}*@
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>}
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Change Password</h2>
                </div>
            </div>
            <br />
            <div class="row form-group">
                <div class="col-lg-6">
                    <label>UserName</label>
                </div>
                <div class="col-lg-6">
                    <input type="text" name="username" class="form-control" />

                </div>
            </div>
            <br />
            <div class="row  form-group">
                <div class="col-lg-6">
                    <label>New Password </label>
                </div>
                <div class="col-lg-6">
                    <input type="password" name="newpassword" class="form-control">


                </div>
            </div>
            <br />
            <div class="row  form-group">
                <div class="col-lg-6">
                    <label>Re Type-New Password </label>
                </div>
                <div class="col-lg-6">
                    <input type="password" name="retypenewpassword" class="form-control">


                </div>
            </div>
            <br />


            <div class="row">

                <div class="col-lg-6">
                   
                </div>
                <div class="col-lg-6">
                    <button type="submit" class="btn btn-primary">Back</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
            <br />
        </div>
    </div>


    <div class="col-lg-4">
    </div>

    //</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}